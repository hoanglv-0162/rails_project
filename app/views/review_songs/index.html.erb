<p id="notice"><%= notice %></p>

<h1>Review Songs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Song</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @review_songs.each do |review_song| %>
      <tr>
        <td><%= review_song.user_id %></td>
        <td><%= review_song.song_id %></td>
        <td><%= review_song.review %></td>
        <td><%= link_to 'Show', review_song %></td>
        <td><%= link_to 'Edit', edit_review_song_path(review_song) %></td>
        <td><%= link_to 'Destroy', review_song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review Song', new_review_song_path %>
