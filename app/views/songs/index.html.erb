<p id="notice"><%= notice %></p>

<h1>Songs</h1>

<% if @songs.any? %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Artist</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @songs.each do |song| %>
          <tr>
            <td><%= song.name %></td>
            <td><%= song.artist %></td>
            <td><%= link_to 'Show', song %></td>
            <td><%= link_to 'Edit', edit_song_path(song) %></td>
            <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
<% else %>
<p style="color:red;"><%= 'List songs is now empty!' %></p> <br><br>
<% end %>
<%= link_to 'New Song', new_song_path %>
